<% layout("/layout/boilerPlate") %>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= Listing.name %></h3>
  </div>
  <div class="card col-6 offset-3 show-card listing-card">
    <img
      src="<%=Listing.image.url%>"
      alt="listing.image"
      class="card-img-top show-img"
      style="height: 20rem"
    />
    <div class="card-body">
      <p class="card-text">Name:- <i> <%= Listing.name %> </i></p>
      <p class="card-text">Description:- <%= Listing.description %></p>
      <p class="card-text"> Price:- 
        &#8377; <%= Listing.price.toLocaleString("en-IN") %>/set
      </p>
      <p class="card-text">Manufactured On:- <%= Listing.manufactureDate %></p>
      <p class="card-text">Use Before:- <%= Listing.expiryDate %></p>
      <p class="card-text">Available Quantity:- <%= Listing.quantityAvailable %></p>
    </div>
  </div>
  <div class="btns mb-3">
    <a
      href="/swasthyasetu/<%= Listing._id %>/edit"
      class="btn btn-outline-primary col-1 offset-3 edit-btn"
      >Edit</a
    >
    <form method="post" action="/swasthyasetu/<%=Listing._id%>?_method=delete">
      <button class="btn btn-outline-primary offset-5">Delete</button>
    </form>
  </div>
